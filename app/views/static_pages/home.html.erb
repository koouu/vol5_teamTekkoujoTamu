<%=javascript_pack_tag 'main'%>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<% if logged_in? %>
  <div id="wrap">
    <div class="content">
    <div id="parent">
      <div id="child1">
        <h1 id="home-cr" class="home solid2">ホーム</h1>
        <div id="home" >
          <%= render 'microposts/all_micropost' %>
        </div>
      </div>
      <div id="child2">
        <h1 class="solid1">進捗を報告しよう</h1>
        <div class="long">
          <%= form_for(@micropost) do |f| %>
          <div class="cp_iptxt">
            <label id="label" class="input_title cnb">
              <%= f.text_field :title, placeholder: "タイトル" %>
            </label>
            <label id="label" class="input_title cnb">
            <%= f.text_field :giturl, placeholder: "URL" %>
            </label>
            <%= f.text_area :content, placeholder: "進捗どんな感じ？",size:"50x6", class:"cnb m-top cnb-cont gray"%>
          </div>
          <label class="btn-flat-dashed-filled">
            画像をアップしてね
            <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png",style:"display:none;"%>
          </label>  
          
          <%= f.submit "Post", class: "btn-send" %>
        <%end%>
